<!doctype html>
<div class="container">
    <div class="row">
        <h1>Node Chat チャットルーム</h1>        
    </div>
    <div class="row room-login_user">
        <p>ログインユーザ：{{userName}}さん</p>
        <input id="userName" type="hidden" value="{{userName}}">
    </div>

    <div id='chat_container'>
        <div class="row">
            <form method="post" action="/">
                <div class="room-message">
                    <textarea id="message" rows="4" class="room-message_textarea" placeholder="投稿文を入力してください"></textarea>
                </div>
                <div class="room-submit">
                    <input type="button" value="投稿" class="common-button room-publish_button btn btn-success" onclick="publish();" id="publishButton">
                    <input type="button" value="メモ" class="common-button room-memo_button btn btn-light" onclick="memo();">
                </div>

                <div class="room-thread" onContextmenu="return false;">
                    <div id="thread">
                    </div>
                </div>

                <div class="room-exit">
                    <input type="button" value="退室する" class="common-button room-exit_button btn btn-danger" onclick="exit();">
                </div>
                
                <div class="room-thread">
                    <div id="memo-thread">
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<div id="contextmenu"></div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/time.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>
