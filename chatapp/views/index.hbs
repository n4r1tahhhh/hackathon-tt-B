<div class="container">
    <div class="row">
        <h1>Node Chat サンプル</h1>
    </div>
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label for="InputTitle">ユーザ名</label>
                <input type="text" id="userName" name="userName" value="{{userName}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="InputTitle">パスワード</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div class="index-enter float-left mr-2">
                <input type="button" value="入室する" class="common-button index-enter_button btn btn-success" onclick="enter();">
            </div>
            <div class="index-signup float-left">
                <input type="button" value="新規登録" class="common-button index-enter_button btn btn-primary" onclick="signup();">
            </div>
        </form>
    </div>
</div>

<script src="/javascripts/index.js"></script>
